import java.io.*;
import java.util.*;

class Node {
	int num;
	Node parent;
	ArrayList<Node> child;
	int weight;

	public Node(int num) {
		this.num = num;
		this.parent = null;
		this.child = new ArrayList<Node>();
		weight = 0;
	}

	public void addChild(Node n, int w) {
		// w=weight
		for (Node node : child) {
			if (node.num == n.num)
				return;
		}

		n.weight = w;
		child.add(n);
	}
}

public class Main {

	public static void main(String[] args) throws IOException {
		// TODO Auto-generated method stub
		InputStreamReader in = new InputStreamReader(System.in);
		BufferedReader br = new BufferedReader(in, 1);
		int nodes = Integer.parseInt(br.readLine());
		// set root node
		String[] sp = br.readLine().split(" ");
		Node root = new Node(Integer.parseInt(sp[0]));
		int nCh = (sp.length - 2) / 2;
		for (int j = 0; j < nCh; j++) {
			root.addChild(new Node(Integer.parseInt(sp[j * 2 + 1])), Integer.parseInt(sp[j * 2 + 2]));
		}

		for (int i = 1; i < nodes; i++) {

		}
	}

}
