import java.io.*;

class Stack {
	char[] data;
	int top;
	int max;

	public Stack() {
		max = 50;
		data = new char[max];
		top = -1;
	}

	public void push(char c) {
		if (top == max - 1)
			return;
		else {
			data[++top] = c;
		}
	}

	public char pop() {
		if (top == -1)
			return '0';
		else {
			return data[top--];
		}
	}

	public int size() {
		return top + 1;
	}

	public char top() {
		if(top==-1) return '0';
		return data[top];
	}
}

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		try {
			BufferedReader br = new BufferedReader(new InputStreamReader(System.in), 1);
			int n = Integer.parseInt(br.readLine());

			for (int i = 0; i < n; i++) {
				String str = br.readLine();
				Stack s = new Stack();
				for (int j = 0; j < str.length(); j++) {
					if (str.charAt(j) == '(') {
						s.push('(');
					} else if (str.charAt(j) == ')') {
						if(s.top()=='('){
							s.pop();
						}else{
							continue;
						}
					}
				}
				if (s.size() == 0) {
					System.out.println("YES");
				} else {
					System.out.println("NO");
				}
			}
		} catch (IOException e) {
			e.printStackTrace();
		}
	}

}
