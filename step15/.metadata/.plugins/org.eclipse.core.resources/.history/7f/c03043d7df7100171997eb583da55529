package lotto;

import java.util.*;

public class Number {
	int[] num;
	public Number(){
		this.num = new int[6];
	}
	
	private void getNum(){
		Random r = new Random();
		for(int i=0;i<6;i++){
			num[i]=r.nextInt(45)+1;
		}
		Arrays.sort(num);
	}
	
	public void print(){
		getNum();
		for(int i=0;i<6;i++){
			System.out.print(num[i]+" ");
		}
		System.out.println();
	}
	
	private boolean isSeq(){
		
	}
}
